SET(CMAKE_SYSTEM_NAME Windows)

SET(CMAKE_FIND_ROOT_PATH @PREFIX@)
SET(CMAKE_SYSROOT @PREFIX@/@ARCH@-w64-mingw32)

SET(CMAKE_C_COMPILER_TARGET @ARCH@-w64-mingw32)
SET(CMAKE_C_COMPILER ${CMAKE_FIND_ROOT_PATH}/bin/${CMAKE_C_COMPILER_TARGET}-clang)
SET(CMAKE_CXX_COMPILER ${CMAKE_FIND_ROOT_PATH}/bin/${CMAKE_C_COMPILER_TARGET}-clang++)
SET(CMAKE_RC_COMPILER ${CMAKE_FIND_ROOT_PATH}/bin/${CMAKE_C_COMPILER_TARGET}-windres)

set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)
